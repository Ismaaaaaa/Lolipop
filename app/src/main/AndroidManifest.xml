<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ismael.lolipop20">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lolipop"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lolipop_round"
        android:supportsRtl="true"
        android:theme="@style/MiEstilo">
        <activity
            android:name=".activities.LogActivity"
            android:exported="true"
            android:label="Log"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.InsertarUsuario"
            android:exported="true"
            android:label="Insertar usuario"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.InsertarAnuncio"
            android:exported="true"
            android:label="Insertar anuncio"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.SecondActivity"
            android:exported="true"
            android:label="Visualizar anuncio"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"/>
</manifest>
